#                     ^ keyword.operator.quantifier
#                      ^ meta.ignored-whitespace.regexp
#                       ^ meta.literal.regexp
#                        ^ meta.ignored-whitespace.regexp
#                         ^ keyword.control.group
#                          ^^^ keyword.operator.quantifier.regexp
(?<name> [a-zA-Z_:]+ ){0}
# <- meta.group.extended keyword.control.group
#^^^^^^^^^^^^^^^^^^^^^ meta.group.extended
#^^^^^^^ keyword.other.named-capture-group.regexp
#       ^ meta.ignored-whitespace.regexp
